<launch>
     <arg name="use_cuda"               default="true"/>

     <arg name="imu_topic"              default="mavros/imu/data"/>
     <arg name="info_topic"             default="camera/depth/camera_info"/>
     <arg name="depth_topic"            default="camera/depth/image_rect_raw"/>
     <!-- <arg name="optical_frame"          default="camera_aligned_depth_to_color_frame"/> -->
     <arg name="optical_frame"          default="camera_depth_optical_frame"/>

     <!-- ZED2 -->
     <!-- <arg name="imu_topic"              default="/zed2/zed_node/imu/data"/>
     <arg name="info_topic"             default="/zed2/zed_node/depth/camera_info"/>
     <arg name="depth_topic"            default="/zed2/zed_node/depth/depth_registered"/>
     <arg name="optical_frame"          default="zed2_left_camera_optical_frame"/> -->

     <arg name="gdb"          default="false"/>
     <arg unless="$(arg gdb)" name="launch_args" default=""/>
     <arg if="$(arg gdb)"     name="launch_args" default="gdb -ex run --args"/>

     <arg name="cuda_args" default=""/>
     <!-- <arg if="$(arg use_cuda)"     name="cuda_args" default="nvprof -o prof.nvvp"/> -->

     <node pkg="swanson_algorithms" type="vboats_node" name="vboats" clear_params="true" output="screen" launch-prefix="$(arg cuda_args) $(arg launch_args)">
          <param name="camera_info_topic"     value="$(arg info_topic)"/>
          <param name="depth_image_topic"     value="$(arg depth_topic)"/>
          <param name="imu_topic"             value="$(arg imu_topic)"/>
          <param name="use_cuda"              value="$(arg use_cuda)"/>
     </node>
</launch>
