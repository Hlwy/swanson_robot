<launch>
     <arg name="update_rate"            default="15"/>

     <arg name="camera_frame_id"        default="camera_aligned_depth_to_color_frame"/>
     <arg name="depth_topic"            default="camera/depth/image_rect_raw"/>
     <arg name="cam_info_topic"         default="camera/depth/camera_info"/>
     <arg name="raw_cloud_topic"        default="vboats/cloud/raw"/>
     <arg name="filtered_cloud_topic"   default="vboats/cloud/filtered"/>
     <arg name="filtered_image_topic"   default="vboats/depth/image_filtered"/>
     <arg name="pose_stamped_topic"     default="mavros/local_position/pose"/>
     <arg name="imu_topic"              default="mavros/imu/data"/>

     <arg name="gdb"          default="false"/>
     <arg unless="$(arg gdb)" name="launch_args" default=""/>
     <arg if="$(arg gdb)"     name="launch_args" default="gdb -ex run --args"/>

     <node pkg="swanson_algorithms" type="vboats_node" name="vboats_node" respawn="true" clear_params="true" output="screen" launch-prefix="$(arg launch_args)">
          <param name="update_rate"           value="$(arg update_rate)"/>

          <param name="camera_base_frame"      value="$(arg camera_frame_id)"/>
          <param name="depth_image_topic"      value="$(arg depth_topic)"/>
          <param name="camera_info_topic"      value="$(arg cam_info_topic)"/>
          <param name="raw_cloud_topic"        value="$(arg raw_cloud_topic)"/>
          <param name="filtered_cloud_topic"   value="$(arg filtered_cloud_topic)"/>
          <param name="filtered_image_topic"   value="$(arg filtered_image_topic)"/>
          <param name="pose_stamped_topic"     value="$(arg pose_stamped_topic)"/>
          <param name="imu_topic"              value="$(arg imu_topic)"/>
     </node>

</launch>
